# PocketWorkx Environment Configuration Template
# Copy this file to .env.development, .env.staging, or .env.production

# Environment
EXPO_PUBLIC_ENV=development

# App Configuration
EXPO_PUBLIC_APP_NAME=PocketWorkx Dev
EXPO_PUBLIC_BUNDLE_ID=com.pocketworkx.app.dev
EXPO_PUBLIC_VERSION=1.0.0

# API Configuration (for future use)
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_API_TIMEOUT=10000

# Debug and Logging
EXPO_PUBLIC_ENABLE_DEBUG=true
EXPO_PUBLIC_LOG_LEVEL=debug

# Google Drive Integration
EXPO_PUBLIC_GOOGLE_DRIVE_SCOPE=test
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# Security
EXPO_PUBLIC_ENCRYPTION_KEY_VERSION=1
EXPO_PUBLIC_ENABLE_BIOMETRIC=true

# Analytics (for future use)
EXPO_PUBLIC_ANALYTICS_ENABLED=false
EXPO_PUBLIC_CRASH_REPORTING=false

# Feature Flags
EXPO_PUBLIC_ENABLE_CRYPTO=false
EXPO_PUBLIC_ENABLE_ADVANCED_ANALYTICS=false
EXPO_PUBLIC_ENABLE_MULTI_CURRENCY=true
